# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_database_password
DB_NAME=bluedart_db

# Blue Dart API Credentials
# Get these from Blue Dart when setting up the webhook integration
BLUEDART_CLIENT_ID=stagingID
BLUEDART_TOKEN=your-test-token

# Security Settings
# Set to 'true' in production to enable IP whitelist validation
# Only Blue Dart production IPs will be allowed when enabled
BLUEDART_ENABLE_IP_WHITELIST=false

